@model Course
<form asp-action="Create">
    <div class = "border p-3 mt-4">
        <div class = "row pb-2">
            <h2 class="text-primary">
                Create Course
            </h2>
        </div>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="mb-3 row">
            <lable asp-for="Name">Name</lable>
            <input asp-for="Name" type = "text" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row">
            <lable asp-for="DisplayOrder">Display Order</lable>
            <input asp-for ="DisplayOrder "type="text" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class=" row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Course" asp-action="Index" class="btn btn-secondary form-control">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</form>

