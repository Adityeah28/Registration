@model Course
<form asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                Delete the Course
            </h2>
        </div>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="mb-3 row">
            <lable asp-for="Name">Name</lable>
            <input asp-for="Name" disabled class="form-control" />
            
        </div>
        <div class="mb-3 row">
            <lable asp-for="DisplayOrder">Display Order</lable>
            <input asp-for="DisplayOrder " disabled class="form-control" />
            
        </div>
        <div class=" row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Course" asp-action="Index"  class="btn btn-secondary form-control">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</form>

