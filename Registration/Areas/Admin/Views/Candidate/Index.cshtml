@model List<Candidates>
<partial name="_Notification" />
<div class = "container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                List of Candidates
            </h2>

        </div>
        <div class="col-6 text-end">
            <a asp-controller="Candidate" asp-action="Create" class = "btn btn-primary">
            <i class="bi bi-plus-square"> Create New Candidate</i>
            </a>
        </div>
    </div>
<table class = "table table-bordered table-striped">
    <thead></thead>
    <tr>
        <th>Candidate Name</th>
        <th> Address</th>
        <th>Class</th>
        <th>Course</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.OrderBy(u=>u.Address))
        {
          <tr> 
                <td>@obj.Name</td>
            <td>@obj.Address</td>
            <td>@obj.Class</td>
            <td>@obj.Class</td>
            <td><div class="w-75 btn-group" role="group">
                <a asp-controller="Candidate" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                    <i class="bi bi-pencil-square"></i>Edit
                </a>
                            <a asp-controller="Candidate" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                    <i class="bi bi-trash3-fill"></i>Delete
                </a>
            </div></td>
          </tr>
        }
    </tbody>
</table>
</div>