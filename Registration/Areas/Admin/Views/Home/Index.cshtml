@model IEnumerable<Candidates>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>School Registration System - Dark Theme</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #121212;
            color: #e0e0e0;
        }

        header {
            background-color: #1e1e1e;
            color: #ffffff;
            padding: 10px 0;
            text-align: center;
            border-bottom: 2px solid #007bff;
        }

            header h1 {
                margin: 0;
                font-size: 24px;
            }

        nav {
            background-color: #333;
        }

            nav ul {
                list-style: none;
                padding: 0;
                margin: 0;
                display: flex;
                justify-content: center;
            }

                nav ul li {
                    margin: 0 15px;
                }

                    nav ul li a {
                        color: #e0e0e0;
                        text-decoration: none;
                        font-weight: bold;
                        padding: 10px;
                        display: block;
                    }

                        nav ul li a:hover {
                            background-color: #555;
                            border-radius: 4px;
                        }

        .content {
            padding: 20px;
            text-align: center;
            background-color: #1e1e1e;
            margin: 20px auto;
            width: 80%;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
        }

            .content h2 {
                font-size: 28px;
                color: #007bff;
            }

            .content p {
                font-size: 18px;
                color: #e0e0e0;
            }

        footer {
            background-color: #333;
            color: #e0e0e0;
            text-align: center;
            padding: 10px 0;
            position: fixed;
            bottom: 0;
            width: 100%;
        }
    </style>
</head>
<body>
    <header>
        <h1>Welcome to XYZ College Registration</h1>
    </header>





    <footer>
        <p>&copy; 2024 XYZ School | All rights reserved</p>
    </footer>
</body>
</html>

<div class="row pb-3">
    
    @foreach (var candidates in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    @if (User.IsInRole("Admin"))
                    {
                        <div class="card border-0 p-3 shadow border-top border-5 rounded">
                            <img src=@candidates.ImageUrl class="card-img-top rounded" />
                            <div class="pl-1">
                                <p class="card-title h5 text-light opacity-85 text-uppercase text-center">@candidates.Name</p>
                            </div>
                            <div class="pl-1">
                                <p class="card-title h5 text-light opacity-85 text-uppercase text-center">@candidates.Class</p>
                            </div>
                            <div>
                                <a asp-action="Details" asp-route-candidateId="@candidates.Id" class="btn btn-primary bg-gradient border-0 form-control">
                                    Details
                                </a>
                            </div>
                        </div>
                    }
                    @if(User.IsInRole("Student"))
                    {
                        <div class="card border-0 p-3 shadow border-top border-5 rounded">
                            <img src=@candidates.ImageUrl class="card-img-top rounded" />
                            <div class="pl-1">
                                <p class="card-title h5 text-light opacity-85 text-uppercase text-center">@candidates.Name</p>
                            </div>
                            <div class="pl-1">
                                <p class="card-title h5 text-light opacity-85 text-uppercase text-center">@candidates.Class</p>
                            </div>
                            <div class="pl-1">
                                <p class="card-title h5 text-light opacity-85 text-uppercase text-center
            @(candidates.Status == "Approved" ? "bg-success" : candidates.Status == "Denied" ? "bg-danger" : "bg-secondary") text-white p-2 rounded">
                                    @candidates.Status
                                </p>
                            </div>
                        </div>




                    }
                   
                </div>
            </div>
        </div>
    }
</div>
