@model Candidates
<form asp-action="HandleCandidateAction" method="post">
    <input type="hidden" name="candidateId" value="@Model.Id" />
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary bg-gradient text-light py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h3 class="text-white text-uppercase">@Model.Name</h3>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="py-3">
                <div class="row">
                    <div class="col-6 col-md-2 offset-lg-1 pb-1">
                        <a asp-action="Index" class="btn btn-outline-primary bg-gradient mb-5 fw-semibold btn-sm text-uppercase">
                            <small>Back to home</small>
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
                        <img src="@Model.ImageUrl" width="100%" class="rounded" />
                    </div>
                    <div class="col-12 col-lg-6 offset-lg-1">
                        <div class="mb-3">
                            <strong>Name:</strong> @Model.Name
                        </div>
                        <div class="mb-3">
                            <strong>Address:</strong> @Model.Address
                        </div>
                        <div class="mb-3">
                            <strong>Course:</strong> @Model.Course?.Name
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <button type="submit" name="action" value="approve" class="btn btn-success w-100">
                                    Approve
                                </button>
                            </div>
                            <div class="col-6">
                                <button type="submit" name="action" value="deny" class="btn btn-danger w-100">
                                    Deny
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

